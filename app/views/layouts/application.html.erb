<!DOCTYPE html>
<html>
  <head>
    <title>Morningboard</title>
    <%= csrf_meta_tags %>
    <%= javascript_pack_tag 'vue', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'vue', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
